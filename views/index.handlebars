<img src="/assets/img/burger.jpg">

<h1>Eat-Da-Burger!</h1>


<form class="create-form">
  <h2>Add a burger</h2>
  <div class="form-group">
    <label for="ca">buger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Add New burger</button>
</form>

<div class="row">
  <div class="col-md-6">
    <h2>Burgers Ready to Eat!!</h2>
    <ul>
      {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=false}} {{/unless}} {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <h2>Burgers Devoured!!</h2>

    <ul>
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=true}} {{/if}} {{/each}}
    </ul>
  </div>
</div>